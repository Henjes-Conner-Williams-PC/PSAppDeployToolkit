<Project Sdk="Microsoft.NET.Sdk">
<!--https://devblogs.microsoft.com/powershell/depending-on-the-right-powershell-nuget-package-in-your-net-project/-->
	<PropertyGroup>
		<OutputType>Library</OutputType>
		<RootNamespace>PSADT</RootNamespace>
		<AssemblyName>PSAppDeployToolkit</AssemblyName>
		<NoWarn>$(NoWarn);CA1416</NoWarn>

		<AssemblyVersion>3.91.0.0</AssemblyVersion>
		<FileVersion>3.91.0</FileVersion>
		<InformationalVersion>1.0.0-beta0</InformationalVersion>
		<Authors>PSADT</Authors>
		<Company>PSADT</Company>
		<Description>A utility for launching and managing processes across multiple user sessions in Windows environments.</Description>
		<Copyright>Copyright PSADT Â© 2023</Copyright>
		<PackageProjectUrl>https://psappdeploytoolkit.com/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/PSAppDeployToolkit/PSAppDeployToolkit</RepositoryUrl>
		<ApplicationIcon>PsadtExec.ico</ApplicationIcon>
		
		<CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
		<TargetFrameworks>net461;net6.0</TargetFrameworks>
		<SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
		<LangVersion>latest</LangVersion>
		<Deterministic>true</Deterministic>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
		<Nullable>enable</Nullable>
		
		<GenerateDocumentationFile>False</GenerateDocumentationFile>
		<SignAssembly>False</SignAssembly>
		
		<SelfContained>false</SelfContained>
		<PublishSingleFile>false</PublishSingleFile>
		<IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
		<EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
		<PublishTrimmed>false</PublishTrimmed>
		<Platforms>AnyCPU</Platforms>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	  <DebugType>none</DebugType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <DebugType>none</DebugType>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<DefineConstants>$(DefineConstants);CoreCLR</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(TargetFramework)' == 'net461'">
		<DefineConstants>$(DefineConstants);NETFramework</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="PsadtExec.ico" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="System.Management.Automation" Version="7.2.*" Condition="'$(TargetFramework)' == 'net6.0'" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="System.DirectoryServices" Condition="'$(TargetFramework)' == 'net461'">
			<HintPath>C:\Windows\Microsoft.NET\assembly\GAC_MSIL\System.DirectoryServices\v4.0_4.0.0.0__b03f5f7f11d50a3a\System.DirectoryServices.dll</HintPath>
			<Private>False</Private>
		</Reference>
		<Reference Include="System.Management.Automation" Condition="'$(TargetFramework)' == 'net461'">
			<HintPath>C:\Windows\Microsoft.NET\assembly\GAC_MSIL\System.Management.Automation\v4.0_3.0.0.0__31bf3856ad364e35\System.Management.Automation.dll</HintPath>
			<Private>False</Private>
		</Reference>
	</ItemGroup>

</Project>
